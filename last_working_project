        var myValue = document.getElementById('name').value;// this function gets the value entered and stores it in myValue variable.
        if (myValue.length == 0) {// I'm checking if the length of the value entered is nothing. Meaning no value at all.
            alert(' Please enter areal value in the first text box !');// I'm waarnig the user to enter a real value if there's none.
            return;
        }else{// I'm checking if the a real value has been entered and hence thanking the user in the alert box
            alert('Thank you for filling out the form, welcome back');
        }
    }
